<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.discoget.test.discoget_core">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/dg_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <!-- Change by Steve 8/26/16 -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AccountAccess"
            android:label="Account Access"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AgreementScreen"
            android:label="Agreement Screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListActivity"
            android:label="Menu Screen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserProfile"
            android:label="Profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Friends"
            android:label="Friends"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Profile"
            android:label="Profile2"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AccountCreation"
            android:label="Profile2"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ActivityHome"
            android:label="Home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".WantList"
            android:label="All Collections"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FriendsWantList"
            android:label="Friends List"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ItemScreen"
            android:label="Item Selected"
            android:theme="@style/AppTheme" />

        <!-- Added by Enrique < 8/26/16 -->
        <activity android:name=".SearchActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".ScanActivity" />
        <activity android:name=".LayoutSwitcher" />
        <activity android:name=".WebAccount"></activity>
    </application>

</manifest>