<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateUserAccount">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_discoGetLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="72dp"
                android:src="@drawable/discoget_logo_small" />

            <TextView
                android:id="@+id/tv_createAccount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="Create DiscoGet Account"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_createAccount_username"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Discogs Username"
                android:text="sawerdeman55" />

            <EditText
                android:id="@+id/et_createAccount_password0"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="local password"
                android:inputType="textPassword"
                android:text="qaz!123" />

            <EditText
                android:id="@+id/et_createAccount_password1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Verify password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_createAccount_userkey"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Discogs UserKey" />

            <EditText
                android:id="@+id/et_createAccount_usersecret"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Discogs UserSecret" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="or"
                android:textSize="24dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/et_createAccount_usertoken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Discogs Token"
                android:text="PwmXNjrBWHFcWsiqSfLKlouUaCGHPTVWrjZRpGHC"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_createAccount_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="saveAccountInfo"
                android:text="Save" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>