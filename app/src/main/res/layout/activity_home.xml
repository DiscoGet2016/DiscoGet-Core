<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/android_discoget_logo320x"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="10dp">


        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/home_profile"
            android:layout_row="0"
            android:layout_column="0" />
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Collection"
            android:id="@+id/home_collection"
            android:layout_row="0"
            android:layout_column="1" />
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Want-list"
            android:id="@+id/home_wantlist"
            android:layout_row="0"
            android:layout_column="2" />


        <!-- row 2 -->
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:id="@+id/home_friends"
            android:layout_row="1"
            android:layout_column="0" />
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Search Friends"
            android:id="@+id/home_search_friends"
            android:layout_row="1"
            android:layout_column="1" />
        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Search Items"
            android:id="@+id/home_search_items"
            android:layout_row="1"
            android:layout_column="2" />

    </GridLayout>


</LinearLayout>